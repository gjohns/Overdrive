<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Run" >

    <CheckBox
        android:id="@+id/oilPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rpms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/oilPressure" />

    <CheckBox
        android:id="@+id/rpms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tirePressure"
        android:layout_below="@+id/mph"
        android:layout_marginTop="18dp"
        android:text="@string/rpms"/>

    <CheckBox
        android:id="@+id/mph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rpms"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:text="@string/mph"/>

    <CheckBox
        android:id="@+id/voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oilPressure"
        android:layout_below="@+id/tirePressure"
        android:text="@string/voltage" />

    <CheckBox
        android:id="@+id/tirePressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oilPressure"
        android:layout_below="@+id/oilPressure"
        android:text="@string/tirePressure" />

    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/voltage"
        android:layout_marginTop="62dp"
        android:layout_toLeftOf="@+id/voltage"
        android:text="@string/Back" 
        android:onClick="returnDisplay" />

    <Button
        android:id="@+id/Run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Back"
        android:layout_toRightOf="@+id/rpms"
        android:text="@string/Run"  />

</RelativeLayout>
